<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:textColor="@color/White"
            android:textSize="@dimen/text_large"
            android:id="@+id/title"
            android:padding="@dimen/button_padding"/>


        <!-- Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/textFormStyle"
                android:text="@string/time"/>

            <EditText
                style="@style/textFormStyle"
                android:id="@+id/edit_time"
                android:inputType="numberDecimal"/>

            <TextView
                android:layout_width="@dimen/units_column"
                android:layout_height="wrap_content"
                android:text="@string/seconds"
                android:textSize="@dimen/text_medium"
                android:padding="@dimen/button_padding"
                android:textColor="@color/White"/>

        </LinearLayout>


        <!-- Score -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/textFormStyle"
                android:text="@string/score"/>

            <TextView
                style="@style/textFormStyle"
                android:id="@+id/calc_score"
                android:text="5.0"/>

            <TextView
                android:layout_width="@dimen/units_column"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_medium"
                android:padding="@dimen/button_padding"
                android:textColor="@color/White"/>

        </LinearLayout>


        <TextView
            style="@style/textFormStyle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/use_of_supports"
            android:gravity="center"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/textFormStyle"
                android:text="@string/hand"/>

            <RadioGroup
                android:id="@+id/rg_hand"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/hand_yes"
                    android:checked="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/yes"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/White"/>


                <RadioButton
                    android:id="@+id/hand_no"
                    android:checked="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/White"/>

            </RadioGroup>

            <View
                android:layout_width="@dimen/units_column"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/textFormStyle"
                android:text="@string/forearm"/>

            <RadioGroup
                android:id="@+id/rg_forearm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/forearm_yes"
                    android:checked="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/yes"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/White"/>


                <RadioButton
                    android:id="@+id/forearm_no"
                    android:checked="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/White"/>

            </RadioGroup>

            <View
                android:layout_width="@dimen/units_column"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/textFormStyle"
                android:text="@string/knee"/>

            <RadioGroup
                android:id="@+id/rg_knee"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/knee_yes"
                    android:checked="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/yes"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/White"/>


                <RadioButton
                    android:id="@+id/knee_no"
                    android:checked="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/White"/>

            </RadioGroup>

            <View
                android:layout_width="@dimen/units_column"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/textFormStyle"
                android:text="@string/lateral_side_of_leg"/>

            <RadioGroup
                android:id="@+id/rg_leg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/leg_yes"
                    android:checked="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/yes"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/White"/>


                <RadioButton
                    android:id="@+id/leg_no"
                    android:checked="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/White"/>

            </RadioGroup>

            <View
                android:layout_width="@dimen/units_column"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/textFormStyle"
                android:text="@string/one_hand_on_knee_or_thigh"/>

            <RadioGroup
                android:id="@+id/rg_one_hand"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/one_hand_yes"
                    android:checked="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/yes"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/White"/>


                <RadioButton
                    android:id="@+id/one_hand_no"
                    android:checked="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/White"/>

            </RadioGroup>

            <View
                android:layout_width="@dimen/units_column"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/textFormStyle"
                android:text="@string/partial_loss_of_balance"/>

            <RadioGroup
                android:id="@+id/rg_loss_of_balance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/loss_of_balance_yes"
                    android:checked="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/yes"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/White"/>


                <RadioButton
                    android:id="@+id/loss_of_balance_no"
                    android:checked="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/White"/>

            </RadioGroup>

            <View
                android:layout_width="@dimen/units_column"
                android:layout_height="match_parent"/>

        </LinearLayout>


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next"
            style="@style/buttonLarge.Primary"
            android:padding="5dp"/>


    </LinearLayout>

</ScrollView>